@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<VinStageStore.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="table-agile-info">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            @using (Html.BeginForm("Index", "Products", FormMethod.Get))
            {
                <p>
                    @Html.TextBox("SearchString", ViewBag.CurrentFiler as string)
                    <input type="submit" value="Tìm kiếm" />
                </p>
            }
            <table class="table">
                <tr>
                    <th>
                        Tên Sản Phẩm
                    </th>
                    <th>
                        Giá
                    </th>
                    <th>
                        Giá Khuyến Mãi
                    </th>
                    <th>
                        Số Lượng Còn Trong Kho
                    </th>
                    <th>
                        Hình Ảnh
                    </th>
                    <th>
                        Sản Phẩm Yêu Thích
                    </th>
                    <th>
                        Kiểu
                    </th>
                    <th>
                        Ảnh Chi Tiết
                    </th>
                    <th>
                        Nhà cung cấp
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceSale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            <img style="height:100px ;width:70px" src="~/Content/images/@item.ImageUrl" alt="Image" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Favourite)
                        </td>
                        <td>
                            @if (item.TypeId == 1)
                            {
                                @Html.Raw("Giảm giá")
                            }
                            else if (item.TypeId == 2)
                            {
                                @Html.Raw("Đề xuất")
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.TypeId)
                            }
                        </td>
                        <td>
                            <img style="height:100px ; width:70px" src="~/Content/images/@item.ImageDetail" alt="Image" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierId)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </section>
</section>
